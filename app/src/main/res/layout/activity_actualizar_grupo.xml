<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ecu.universidades.leccionario.ActualizarGrupoActivity">



    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spListSemestreView"
        android:layout_below="@+id/idSemestre"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tSemestre"
        android:hint="@string/prompt_semestre"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spListGrupoView"
        android:layout_below="@+id/idSeleccionGrupo"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/tNombregrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_nombreGrupo"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@+id/spGrupo"
        android:layout_alignEnd="@+id/spGrupo"
        android:layout_marginEnd="45dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activo"
        android:id="@+id/chBoxActivoView"
        android:layout_below="@+id/crearMateria"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_alignEnd="@+id/btnOKGrupo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/btnOKGrupo"
        android:layout_below="@+id/spSemestre"
        android:layout_toEndOf="@+id/idSemestre" />

</LinearLayout>
