<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ecu.universidades.leccionario.ActualizarAsignaturaActivity"
    android:orientation="vertical" >

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spMateriaView"
        android:layout_below="@+id/materia"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/crearMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/prompt_materia"
        android:maxLines="1"
        android:ems="10"
        android:layout_below="@+id/spMateriaView"
        android:layout_toEndOf="@+id/materia" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activo"
        android:id="@+id/chBoxActivoView"
        android:layout_below="@+id/crearMateria"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_alignEnd="@+id/aceptar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/aceptar"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/idSeleccioneMateria" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/materia"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</LinearLayout>
